{
  "manifest_version": 3,
  "name": "GitHub PR Raycast Confetti",
  "version": "1.0.0",
  "description": "Trigger Raycast confetti when your GitHub pull request passes CI checks",
  "browser_specific_settings": {
    "gecko": {
      "id": "github-pr-raycast-confetti@helen.github.io"
    }
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://github.com/*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*/pull/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
